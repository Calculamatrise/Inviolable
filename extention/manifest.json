{
    "manifest_version": 2,
    "name": "Free Rider Lite",
    "version": "2.3",
    "description": "Replaces the current assets used in FreeRiderHD with the older (and better) ones.",
    "author": "Calculus & GoodraFRHD",
    "content_scripts": [
        {
            "matches": [
                "*://www.freeriderhd.com/*",
                "*://freeriderhd.com/*"
            ],
            "js": [
                "js/injecter.js"
            ],
            "css" : [
                "css/combined.css",
                "css/frhd_app.css"
            ]
        },
        {
            "matches": [
                "*://community.freeriderhd.com/*"
            ],
            "css" : [
                "css/forums.css"
            ]
        },
        {
            "matches": [
                "*://community.freeriderhd.com/*"
            ],
            "js": [
                "js/forums_injecter.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://*.freeriderhd.com/*"
    ],
    "web_accessible_resources": [
        "js/main.js",
        "js/forums_main.js",
        "images/*.png"
    ],
    "icons": {
        "128": "images/icons/icon_128.png"
    },
    "browser_action": {
        "default_icon": "images/icons/icon_128.png",
        "default_popup": "popup.html",
        "default_title": "Free Rider Lite"
    }
}
