{
    "manifest_version": 2,
    "name": "Free Rider Lite",
    "version": "3.0.1",
    "author": "Calculus",
    "content_scripts": [
        {
            "matches": [
                "*://www.freeriderhd.com/*",
                "*://freeriderhd.com/*"
            ],
            "css" : [
                "style/combined.css",
                "style/frhd_app.css"
            ],
            "js": [
                "script/update.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "script/background.js"
        ]
    },
    "permissions": [
        "storage",
        "webRequest",
        "webRequestBlocking",
        "*://*.freeriderhd.com/*",
        "*://cdn.freeriderhd.com/free_rider_hd/assets/scripts/game/game.min.*.js",
        "*://cdn.freeriderhd.com/free_rider_hd/styles/application/frhd_app.min.*.css",
        "*://cdn.freeriderhd.com/free_rider_hd/assets/styles/combined/gui/combined.min.*.css"
    ],
    "web_accessible_resources": [
        "script/main.js",
        "script/game.js",
        "images/*.png"
    ],
    "icons": {
        "128": "images/icons/icon_128.png"
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Free Rider Lite"
    }
}
